<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="7"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/black"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:src="@drawable/pic"
            android:id="@+id/image"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/image"
            android:text="Gullu Bhai"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="25dp"
            android:textStyle="bold|italic" />

        <TextView

            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/image"
            android:text="18"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="25dp"
            android:textStyle="bold|italic" />

        <TextView

            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/image"
            android:text="Male"
            android:textAlignment="center"
            android:textColor="#FF0000"

            android:textSize="25dp"
            android:textStyle="bold|italic" />

        <TextView

            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/age"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@id/image"
            android:text="65kg"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="25dp"
            android:textStyle="bold|italic" />

        <TextView

            android:id="@+id/maritalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:layout_marginLeft="101dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/image"
            android:text="Single"
            android:textAlignment="center"
            android:textColor="#FF0000"

            android:textSize="25dp"
            android:textStyle="bold|italic" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/black"
        >

        <Button
android:onClick="ex"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/exercise"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"
            android:text="EXERCIES"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textAlignment="center"
            android:id="@+id/exercies"
            />
        <Button
            android:onClick="timeTable"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/exercise"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:text="Time Table"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_toRightOf="@id/exercies"
            android:id="@+id/time"
            />
        <Button
            android:layout_below="@id/exercies"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/exercise"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:text="Faviorit"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textAlignment="center"
            android:id="@+id/fav"
            />
        <Button
            android:onClick="profile"
            android:layout_below="@id/exercies"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/exercise"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="Profile"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_toRightOf="@id/exercies"
            android:id="@+id/profile"
            />

    </RelativeLayout>








</LinearLayout>
