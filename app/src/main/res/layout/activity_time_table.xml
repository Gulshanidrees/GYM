<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="TimeTable"
            android:textSize="50dp"
            android:textStyle="bold|italic"
            android:textColor="#FF0000"
            android:fontFamily="cursive"
            android:textAlignment="center"
    android:id="@+id/timetable"
            />

<TextView
    android:layout_marginLeft="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Time :: "
    android:textStyle="italic|bold"
    android:textColor="#0039E4"
    android:textSize="30dp"
    android:textAlignment="center"
    android:layout_centerVertical="true"
    android:layout_below="@+id/timetable"
    android:layout_marginTop="30dp"
    android:fontFamily="serif"
    android:id="@+id/selected"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textStyle="italic|bold"
            android:textColor="#0039E4"
            android:layout_toRightOf="@+id/selected"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_below="@+id/timetable"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:id="@+id/selection"
            />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
    >
    <EditText

        android:layout_width="280dp"
        android:layout_height="60dp"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textStyle=""
        android:hint="Enter Time (00:00)"
        android:textColorHint="#0241E3"
    android:id="@+id/t1"
    android:layout_marginTop="100dp"
        android:layout_centerHorizontal="false"/>

    <EditText
        android:layout_width="90dp"
        android:layout_toRightOf="@+id/t1"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:textColor="#0241E3"
        android:textStyle=""
        android:inputType="text"
        android:hint="AM/PM"
        android:textColorHint="#FF0000"
        android:id="@+id/t"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="false"/>
<Button
    android:onClick="set1"
    android:layout_width="350dp"
    android:layout_height="60dp"
    android:text="Set New Gym Time"
    android:textAlignment="center"
    android:textColor="#5CEA01"
    android:textSize="20dp"
    android:background="#8812AA"
    android:layout_centerInParent="false"
    android:layout_below="@+id/t1"
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/s1"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/s1"
        android:layout_marginTop="100dp"
        android:text="HINT : ENTER Time in this Formate 00:00 and Mention AM / PM "
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="#DA0303"
        android:id="@+id/hint"/>

</RelativeLayout>



</LinearLayout>